#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "Running pre-commit checks..."

# 1. Run linting and formatting on staged files
npx lint-staged
if [ $? -ne 0 ]; then
  echo "Linting or formatting failed. Aborting commit."
  exit 1
fi

# 2. Run type checking in all TypeScript files
npm run typecheck
if [ $? -ne 0 ]; then
  echo "TypeScript check failed. Aborting commit."
  exit 1
fi

# 3. Run all tests
npm run test:run
if [ $? -ne 0 ]; then
  echo "Tests failed. Aborting commit."
  exit 1
fi

echo "Pre-commit checks passed! âœ¨"